<h2>Create a New User</h2>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :password_digest %>
  <%= f.text_field :password_digest %>
  <br>
  <%= f.label :cat_1 %>
  <%= f.text_field :cat_1 %>
  <br>
  <%= f.label :cat_2 %>
  <%= f.text_field :cat_2 %>
  <br>
  <%= f.label :cat_3 %>
  <%= f.text_field :cat_3 %>
  <br>
  <%= f.submit "Create User" %>
<% end %>
