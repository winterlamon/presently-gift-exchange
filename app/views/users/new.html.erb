<h2>Create a New User</h2>

<%= form_for @user do |f| %>
  <%= f.label :first_name, 'First Name' %>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :last_name, 'Last Name' %>
  <%= f.text_field :last_name %>
  <br>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :password, 'Password' %>
  <%= f.text_field :password %>
  <br>
  <%= f.label :bio, 'Tell us about yourself:' %>
  <%= f.text_area :bio %>
  <br>
  <%= f.label :cat_1, 'Preferred Gift Category' %>
  <%= f.text_field :cat_1 %>
  <br>
  <%= f.label :cat_2, 'Preferred Gift Category' %>
  <%= f.text_field :cat_2 %>
  <br>
  <%= f.label :cat_3, 'Preferred Gift Category' %>
  <%= f.text_field :cat_3 %>
  <br>
  <%= f.submit "Create User" %>
<% end %>
